{
  "extends": "../../../tsconfig.base.json",

  "compilerOptions": {
    "composite": false,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@ui": ["../../ui/src/index.ts"],
      "@ui/*": ["../../ui/src/*"],
      "@showcase/*": ["src/*"]
    },

    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",

    "types": ["vite/client"],

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },

  "include": ["src", "../stories"]
}